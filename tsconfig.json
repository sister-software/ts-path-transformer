{
  // This file is not used in compilation. It is here just for a nice editor experience.

  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "target": "ES2022",
    "module": "ES2022",
    "allowImportingTsExtensions": true,
    "outDir": "./dist",
    // "emitDeclarationOnly": true,
    "moduleResolution": "bundler",
    "declaration": true,
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,

  },
  "include": [
    "./**/*.ts",
    "./**/*.mts",
    "./**/*.tsx",
    "types/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
